-- Test 08: Edge error cases 
.load ../build/graphqlite.so

-- Test malformed edge syntax (these should fail gracefully)
SELECT '=== Testing malformed edge syntax (should produce parse errors) ===';

-- Missing arrow direction
.print "Testing missing arrow direction (should fail):"
SELECT cypher('CREATE (a:Person)-[:KNOWS]-(b:Person)');

-- Incomplete edge pattern
.print "Testing incomplete edge pattern (should fail):"
SELECT cypher('CREATE (a:Person)-[:KNOWS');

-- Invalid edge variable syntax
.print "Testing invalid edge variable syntax (should fail):"
SELECT cypher('CREATE (a:Person)-[123:KNOWS]->(b:Person)');

-- Missing edge type
.print "Testing missing edge type (should fail):"
SELECT cypher('CREATE (a:Person)-[r]->(b:Person)');

-- Invalid property syntax in edge
.print "Testing invalid property syntax in edge (should fail):"
SELECT cypher('CREATE (a:Person)-[r:KNOWS {name}]->(b:Person)');

-- Mixed arrow directions (invalid)
.print "Testing mixed arrow directions (should fail):"
SELECT cypher('CREATE (a:Person)<-[:KNOWS]->(b:Person)');

-- Missing closing bracket
.print "Testing missing closing bracket (should fail):"
SELECT cypher('CREATE (a:Person)-[r:KNOWS->(b:Person)');

-- Invalid characters in edge type
.print "Testing invalid characters in edge type (should fail):"
SELECT cypher('CREATE (a:Person)-[:KN@WS]->(b:Person)');

SELECT 'Edge error case testing completed - parse errors above are expected!';